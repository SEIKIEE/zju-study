<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjuzjy.questionnaire.resource.mapper.UserMapper">

    <select id="getUser" parameterType="User" resultType="User">
        select *
        from user
        where (phoneNumber = #{phoneNumber} or email = #{email})
        and password = #{password};
    </select>

    <select id="getUserByID" parameterType="java.lang.Long" resultType="User">
        select *
        from user
        where userID = #{userID};
    </select>

    <insert id="addUser" useGeneratedKeys="true" keyProperty="userID" parameterType="User">
        insert into user(username,password,phoneNumber,email)
        values (#{username},#{password},#{phoneNumber},#{email});
    </insert>

    <update id="updateUser" parameterType="User">
        update user
        <trim prefix="set" suffixOverrides=",">
            <if test="username != null">username = #{username},</if>
            <if test="phoneNumber != null">phoneNumber = #{phoneNumber},</if>
            <if test="email != null">email = #{email},</if>
        </trim>
        where userID = #{userID}
    </update>

</mapper>
